{
  # Disable public ACME since these are internal hostnames
  auto_https off
  debug
}

# Reverse proxy internal homelab services by hostname

http://grafana.homelab {
  reverse_proxy grafana:3000
}

http://homepage.homelab {
  reverse_proxy homepage:3000
}

http://pihole.homelab {
  # Redirect root to admin UI
  handle_path / {
    redir /admin/ 302
  }
  reverse_proxy pihole:80
}

